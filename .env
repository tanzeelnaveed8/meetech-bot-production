# Application Environment
APP_ENV=development
LOG_LEVEL=INFO
SECRET_KEY=your-secret-key-change-in-production

# Database Configuration
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/leadbot
REDIS_URL=redis://localhost:6379/0

# WhatsApp Business API Configuration
# Choose provider: twilio, 360dialog, or meta
WHATSAPP_PROVIDER=twilio
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
WHATSAPP_ACCESS_TOKEN=your_access_token
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your_verify_token_here
WHATSAPP_WEBHOOK_SECRET=your_webhook_secret

# LLM Provider Configuration
# Choose provider: openai or anthropic
LLM_PROVIDER=openai
OPENAI_API_KEY=sk-your-openai-key
# ANTHROPIC_API_KEY=sk-ant-your-anthropic-key

# Performance Settings
MAX_CONCURRENT_CONVERSATIONS=100
RESPONSE_TIMEOUT_SECONDS=0.8
LLM_TIMEOUT_SECONDS=0.5

# Feature Flags
ENABLE_FOLLOW_UPS=true
ENABLE_PROOF_ASSETS=true
ENABLE_CALENDAR_INTEGRATION=false

# Calendar Integration 
 GOOGLE_CALENDAR_CREDENTIALS_PATH=path/to/credentials.json
 CALENDLY_API_KEY=your_calendly_key



# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2


